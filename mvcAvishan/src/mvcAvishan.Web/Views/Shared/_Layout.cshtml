<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <title>@ViewData["Title"]</title>

    @RenderSection("Styles", required: false)

    <link href="~/bootstrap.min.css" rel="stylesheet" />

    <style>
        #header {
            border-radius: 25px;
            width: 100%;
            height: 90px;
            text-align: center;
            background-image: url('./images/thyme.jpg');
            font-size: 20vw;
            font-weight: bold;
        }

        #sidebar-left {
            border-radius: 25px;
            float: left;
            width: 15%;
            background-color: khaki;
        }

        #main {
            border-radius: 25px;
            float: left;
            width: 70%;
            background-color: lightgray;
        }

        #sidebar-right {
            border-radius: 25px;
            float: left;
            width: 15%;
            background-color: khaki;
        }

        #footer {
            border-radius: 25px;
            clear: both;
            height: 50px;
            width: 100%;
            text-align: center;
            background-color: lightblue;
        }

        #sidebar-left, #main, #sidebar-right {
            min-height: 600px
        }
        
     
    </style>
</head>
<body>

    <div class="container">

        <br />
           <div class="container col-md-12" id="header"></div>
              
                    
        <div class="container col-md-2" id="sidebar-left"></div>

        <div class="container col-md-8" id="main">
            <br />
            @RenderBody()
        </div>

        <div class="container col-md-2" id="sidebar-right"></div>


        <div class="container col-md-12" id="footer"></div>

    </div>

    @RenderSection("Scripts", required: false)

    <script src="~/bootstrap.min.js"></script>
    <script src="~/jquery.min.js"></script>

</body>
</html>
